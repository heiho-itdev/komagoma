<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>Komagoma</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>
        #sidebar-wrapper {
            min-height: 100vh;
            margin-left: 0;
            transition: margin 0.25s ease-out;
        }

        #sidebar-wrapper .sidebar-heading {
            padding: 0.875rem 1.25rem;
            font-size: 1.2rem;
        }

        #sidebar-wrapper .list-group {
            width: 12rem;
        }

        #page-content-wrapper {
        }

        body.sb-sidenav-toggled #wrapper #sidebar-wrapper {
          margin-left: -12rem;
        }

        @media (min-width: 768px) {
            #sidebar-wrapper {
                margin-left: 0;
            }

            #page-content-wrapper {
                min-width: 0;
                width: 100%;
            }

            body.sb-sidenav-toggled #wrapper #sidebar-wrapper {
                margin-left: -12rem;
            }
        }

        .modal.fade {
            transition-duration: 0.1s;
        }

          .modal.in {
              transition-duration: 0.1s;
          }
    </style>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-2J6LJP5HZ5"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'G-2J6LJP5HZ5');
    </script>
  </head>

  <body class="app">
  <div class="" id="wrapper">
    <!-- Top navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom" style=";">
      <div class="container-fluid"  >
        <div class="navbar-nav mr-auto">
          <button id="sidebarToggle" class="d-md-none" style="border:dimgrey;box-shadow: 0 0 3px gray;" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
        <div class="" id="navbarSupportedContent">
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= current_user.name %></a>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="#"><i class="fas fa-cogs"></i>&nbsp;ユーザー設定</a>
                <div class="dropdown-divider"></div>
                <%= link_to  log_out_path , class: "dropdown-item" do %>
                  <i class="fas fa-sign-out-alt"></i>&nbsp;ログアウト
                <% end %>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page content wrapper-->
    <div id="page-content-wrapper" class="wrapper">
      <div class="row" style="--bs-gutter-x: 0;">
          <!-- Sidebar-->
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse" style="overflow-y: scroll;margin-top: 2px;">
            <div class="list-group list-group-flush">
              <%= link_to dashboard_path , class: "list-group-item list-group-item-action list-group-item-light p-3" do %>
                <i class="fas fa-home"></i>&nbsp;ダッシュボード
              <% end %>
              <%= link_to dashboard_path , class: "list-group-item list-group-item-action list-group-item-light p-3" do %>
                <i class="fas fa-user"></i>&nbsp;権限設定
              <% end %>
              <%= link_to dashboard_path , class: "list-group-item list-group-item-action list-group-item-light p-3" do %>
                <i class="fas fa-bug"></i>&nbsp;バグマスター
              <% end %>
              <%= link_to floorMaster_path , class: "list-group-item list-group-item-action list-group-item-light p-3" do %>
                <i class="fas fa-layer-group"></i>&nbsp;フロアマスター
              <% end %>
              <%= link_to dashboard_path , class: "list-group-item list-group-item-action list-group-item-light p-3" do %>
                <i class="fas fa-paint-brush"></i>&nbsp;サインマスター
              <% end %>
              <%= link_to dashboard_path , class: "list-group-item list-group-item-action list-group-item-light p-3" do %>
                <i class="fas fa-wifi"></i>&nbsp;アプリマスター
              <% end %>
              <%= link_to dashboard_path , class: "list-group-item list-group-item-action list-group-item-light p-3" do %>
                <i class="fas fa-image"></i>&nbsp;イメージテキスト抽出
              <% end %>
              <%= link_to dashboard_path , class: "list-group-item list-group-item-action list-group-item-light p-3" do %>
                <i class="fab fa-connectdevelop"></i>&nbsp;キントーン連携
              <% end %>
              <%= link_to dashboard_path , class: "list-group-item list-group-item-action list-group-item-light p-3" do %>
                <i class="fas fa-calendar-alt"></i>&nbsp;カレンダーマスター
              <% end %>
            </div>
        </nav>
          <!-- Page content-->
         <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="padding: 2vh">
            <%= yield %>
         </main>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>