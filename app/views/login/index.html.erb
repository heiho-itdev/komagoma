<style>
    /*
     * General styles
     */
    body {
        height: 100%;
        background-size: auto;
        background-size:cover;
        background-image:url(<%= asset_path "main-visual-1.jpg" %>);
        background-color:rgba(162,162,162,0.4);
        background-blend-mode:lighten;
    }
    html ,body{
        height: 100%;
        background-size: auto;
        background-size:cover;

    }

    .card-container.card {
        max-width: 350px;
        padding: 20px 40px 40px 40px;
    }

    .btn {
        font-weight: 700;
        height: 36px;
        -moz-user-select: none;
        -webkit-user-select: none;
        user-select: none;
        cursor: default;
        box-shadow: 0 0 8px gray;
    }
    /*
    * Card component
    */
    .card {
        background-color: #F7F7F7;
        padding: 20px 25px 30px;
        margin: 0 auto 25px;
        margin-top: 120px;
        /* shadows and rounded borders */
        -moz-border-radius: 5px;
        -webkit-border-radius: 5px;
        border-radius: 5px;
        -moz-box-shadow: 0px 0px 8px gray;
        -webkit-box-shadow: 0px 8px gray;
        box-shadow: 0 0 8px gray;
    }

    .profile-img-card {
        width: 270px;
        height: 150px;
        margin: 0 auto 10px;
        display: block;
    /**    -moz-border-radius: 20%;
        -webkit-border-radius: 20%;
        border-radius: 20%;*/
    }
    /*
    * Form styles
    */

    .profile-name-card {
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        margin: 10px 0 0;
        min-height: 1em;
    }

    .reauth-email {
        display: block;
        color: #404040;
        line-height: 2;
        margin-bottom: 10px;
        font-size: 14px;
        text-align: center;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
    }

    .form-signin #inputEmail,
    .form-signin #inputPassword {
        direction: ltr;
        height: 44px;
        font-size: 16px;
    }

    .form-signin input[type=email],
    .form-signin input[type=password],
    .form-signin input[type=text],
    .form-signin button {
        width: 100%;
        display: block;
        margin-bottom: 10px;
        z-index: 1;
        position: relative;
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
    }

    .form-signin .form-control:focus {
        border-color: rgb(104, 145, 162);
        outline: 0;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgb(104, 145, 162);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgb(104, 145, 162);
    }

    .btn.btn-signin {
        /*background-color: #4d90fe; */
        margin-top: 24px;
        width: 100%;
        background-color: rgb(104, 145, 162);
        /* background-color: linear-gradient(rgb(104, 145, 162), rgb(12, 97, 33));*/
        padding: 0px;
        font-weight: 700;
        font-size: 14px;
        height: 36px;
        -moz-border-radius: 3px;
        -webkit-border-radius: 3px;
        border-radius: 3px;
        border: none;
        -o-transition: all 0.218s;
        -moz-transition: all 0.218s;
        -webkit-transition: all 0.218s;
        transition: all 0.218s;
    }

    .btn.btn-signin:hover,
    .btn.btn-signin:active,
    .btn.btn-signin:focus {
        background-color: rgb(12, 97, 33);
    }

    .forgot-password {
        color: rgb(104, 145, 162);
        font-size: smaller;
    }

    .forgot-password:hover,
    .forgot-password:active,
    .forgot-password:focus {
        color: rgb(12, 97, 33);
    }
</style>

<div class="container">
  <div class="card card-container">
    <!--<%= image_tag "komagoma.png", alt: "Rails icon", id: "profile-img", class: "profile-img-card"%>-->
    <h3 style="text-align: center;margin-bottom: 20px;font-family: cursive;">KOMA&nbsp;<i class="fab fa-pagelines"></i>&nbsp;GOMA</h3>
    <%= form_tag("/login", method: "post", class:"form-signin") do %>
      <%= label_tag(:email, "メールアドレス", style:"font-size: smaller;") %>
      <%= text_field_tag(:email) %>
      <%= label_tag(:password, "パスワード", style:"font-size: smaller;") %>
      <%= password_field_tag(:password) %>
<!--  <%= label_tag(:password_confirmation, "password_confirmation:") %>
      <%= password_field_tag(:password_confirmation) %>
      <div id="remember" class="checkbox"><label><input type="checkbox" value="remember-me">Remember me </label></div>-->
      <%= submit_tag("ログイン", class:"btn form-signin btn-signin btn-lg") %>
    <% end %>
    <!-- /form -->
    <div style="margin-top:8px">
    <a href="#" class="forgot-password">＞パスワードを忘れた方</a>
    </div>
    <%= link_to "Googleでログイン(test用)", "/auth/google_oauth2",style:"margin-top:10px;font-size: smaller;" , method: :post %>
  </div>
  <!-- /card-container -->
</div>
<!-- /container -->